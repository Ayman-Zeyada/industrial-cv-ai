#!/bin/bash
# Source this file to set up Emscripten environment
# Usage: source .emscripten-env

if [ -f "./emsdk/emsdk_env.sh" ]; then
    source ./emsdk/emsdk_env.sh
    echo "Emscripten environment loaded"
    echo "emcc version: $(emcc --version | head -1)"
else
    echo "Error: emsdk/emsdk_env.sh not found"
    echo "Make sure you're in the project root directory"
fi